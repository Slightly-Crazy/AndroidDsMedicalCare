<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?android:attr/selectableItemBackground"
              android:orientation="vertical" android:paddingTop="5dp" android:paddingBottom="5dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name Placeholder"
            android:id="@+id/nameView"
            android:layout_below="@+id/alarmButton" android:layout_toRightOf="@+id/photoButton"
            android:layout_toEndOf="@+id/photoButton" android:textColor="#ff65c29c" android:textStyle="bold"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alarmButton"
            android:src="@mipmap/ic_notifications_black_24dp"
            android:layout_alignParentStart="false" android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/photoButton"
            android:src="@mipmap/ic_launcher" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Bedtime"
            android:id="@+id/bedButton"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/photoButton" android:layout_alignRight="@+id/alarmButton"
            android:layout_alignEnd="@+id/alarmButton" android:layout_marginRight="60dp"
            android:background="#ff4eb4a7" android:textColor="#ffffffff" android:paddingTop="5dp"
            android:paddingBottom="5dp" android:layout_marginBottom="5dp"/>
    <Button android:layout_width="180dp" android:layout_height="wrap_content" android:text="Awakening"
            android:id="@+id/awakeButton"
            android:layout_below="@+id/bedButton" android:layout_alignRight="@+id/bedButton"
            android:layout_alignEnd="@+id/bedButton" android:background="#ff4eb4a7" android:textColor="#ffffffff"
            android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    <Button android:layout_width="180dp" android:layout_height="wrap_content" android:text="Survey"
            android:id="@+id/trackButton"
            android:layout_below="@+id/awakeButton" android:layout_alignRight="@+id/awakeButton"
            android:layout_alignEnd="@+id/awakeButton" android:background="#ff4eb4a7" android:textColor="#ffffffff"
            android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
</RelativeLayout>