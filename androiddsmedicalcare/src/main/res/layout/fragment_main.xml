<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="ca.hackathon.androiddsmedicalcare.MainActivity$PlaceholderFragment">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name Placeholder"
            android:id="@+id/childNameView" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/imageButton" android:textSize="28dp"
            android:layout_toLeftOf="@+id/imageButton" android:layout_toStartOf="@+id/imageButton"
            android:textAlignment="inherit" android:paddingTop="12dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton" android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:src="@mipmap/ic_notifications_black_24dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BedTime"
            android:id="@+id/bedButton" android:layout_below="@+id/childNameView"
            android:layout_marginTop="51dp" android:layout_alignRight="@+id/awakeningButton"
            android:layout_alignEnd="@+id/awakeningButton" android:layout_alignLeft="@+id/awakeningButton"
            android:layout_alignStart="@+id/awakeningButton"
        android:onClick="onClickBedtime" />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Awakening"
            android:id="@+id/awakeningButton" android:layout_below="@+id/bedButton" android:layout_centerHorizontal="true"
        android:onClick="onClickAwakening" />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:id="@+id/sbdButton" android:layout_below="@+id/awakeningButton"
            android:layout_alignRight="@+id/awakeningButton" android:layout_alignEnd="@+id/awakeningButton"
            android:layout_alignLeft="@+id/bedButton" android:layout_alignStart="@+id/bedButton"
        android:onClick="onClickSBD" />
</RelativeLayout>
