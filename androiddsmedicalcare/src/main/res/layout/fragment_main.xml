<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.hackathon.androiddsmedicalcare.MainActivity$PlaceholderFragment"
    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@mipmap/ic_calendar"
        android:background="#00ffffff"
        android:onClick="onClickCalendarButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BedTime"
        android:id="@+id/bedButton"
        android:onClick="onClickBedtime"
        android:layout_toEndOf="@+id/portraitButton"
        android:layout_below="@+id/editText2"
        android:layout_toRightOf="@+id/portraitButton" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Awakening"
        android:id="@+id/awakeningButton"
        android:onClick="onClickAwakening"
        android:layout_below="@+id/bedButton"
        android:layout_toRightOf="@+id/portraitButton"
        android:layout_toEndOf="@+id/portraitButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alerts"
        android:id="@+id/summaryButton"
        android:onClick="onClickAlert"
        android:layout_below="@+id/awakeningButton"
        android:layout_toEndOf="@+id/portraitButton"
        android:layout_toRightOf="@+id/portraitButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:text="Andy"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:layout_alignRight="@+id/portraitButton"
        android:layout_alignEnd="@+id/portraitButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:text="Sara"
        android:layout_below="@+id/summaryButton"
        android:textSize="25dp"
        android:layout_alignRight="@+id/imageButton2"
        android:layout_alignEnd="@+id/imageButton2"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BedTime"
        android:id="@+id/button"
        android:onClick="onclickBedtime"
        android:layout_toRightOf="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton2"
        android:layout_below="@+id/editText4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Awakening"
        android:id="@+id/button2"
        android:onClick="onClickawakening"
        android:layout_below="@+id/button"
        android:layout_toEndOf="@+id/imageButton2"
        android:layout_toRightOf="@+id/imageButton2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alerts"
        android:id="@+id/button3"
        android:onClick="onClickAlert"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton2" />
    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/portraitButton"
        android:src="@drawable/defaultimage"
        android:onClick="onClickCamera"
        android:layout_below="@+id/editText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/defaultimage"
        android:onClick="onClickCamera"
        android:layout_below="@+id/editText4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
