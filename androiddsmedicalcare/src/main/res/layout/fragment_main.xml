<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="ca.hackathon.androiddsmedicalcare.MainActivity$PlaceholderFragment"
    >

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton" android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:src="@mipmap/ic_notifications_black_24dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BedTime"
            android:id="@+id/bedButton"
        android:layout_marginTop="51dp" android:layout_alignRight="@+id/awakeningButton"
            android:layout_alignEnd="@+id/awakeningButton" android:layout_alignLeft="@+id/awakeningButton"
            android:layout_alignStart="@+id/awakeningButton"
        android:onClick="onClickBedtime" />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Awakening"
            android:id="@+id/awakeningButton" android:layout_below="@+id/bedButton" android:layout_centerHorizontal="true"
        android:onClick="onClickAwakening" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary"
        android:id="@+id/summaryButton"
        android:layout_alignRight="@+id/awakeningButton" android:layout_alignEnd="@+id/awakeningButton"
        android:layout_alignLeft="@+id/bedButton" android:layout_alignStart="@+id/bedButton"
        android:onClick="onClickSummary"
        android:layout_below="@+id/awakeningButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Andy" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:text="Sara"
        android:layout_centerVertical="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BedTime"
        android:id="@+id/button"
        android:layout_below="@+id/editText4"
        android:layout_alignLeft="@+id/summaryButton"
        android:layout_alignStart="@+id/summaryButton"
        android:layout_alignRight="@+id/summaryButton"
        android:layout_alignEnd="@+id/summaryButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Awakening"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

</RelativeLayout>
